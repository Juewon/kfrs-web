# ===== Django =====
DJANGO_DEBUG=true
SECRET_KEY=changeme                         # 실제 배포 전 반드시 변경
ALLOWED_HOSTS=localhost,127.0.0.1
TIME_ZONE=Asia/Seoul

# ===== MySQL (Docker 로컬 개발) =====
# 호스트에서 컨테이너로 포트 매핑 (docker-compose에서 사용 가능)
HOST_MYSQL_PORT=13306

# 앱(Django)에서 DB 접속에 사용할 값
MYSQL_HOST=127.0.0.1
MYSQL_PORT=13306
MYSQL_DATABASE=kfrs
MYSQL_USER=appuser
MYSQL_PASSWORD=changeme-db
MYSQL_ROOT_PASSWORD=changeme-root

# 문자셋/콜레이션(옵션)
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_general_ci

# 컨테이너/애플리케이션 공통 TZ
TZ=Asia/Seoul